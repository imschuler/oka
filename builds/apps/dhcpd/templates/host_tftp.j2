host {{ host }} {
  hardware ethernet {{ mac }};
  fixed-address {{ ip }};
  next-server {{ tftpd_ip_ext }};
  if option arch = 00:07 or option arch = 00:09 {
    filename "{{ install_id }}/efi/{{ shim_x64 }}";
  } elsif option arch = 00:0b { 
    filename "{{ install_id }}/efi/{{ shim_aa64 }}";
  } else {
    filename "{{ install_id }}/pxelinux/pxelinux.0";
  }
}
# END MANAGED BY OKA {{ mac }}
